{
    "name": "davwheat/virtual-authors",
    "description": "Specify virtual authors for discussions on your forum, with credits for each.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "Proprietary",
    "require": {
        "flarum/core": "^1.1.0"
    },
    "authors": [
        {
            "name": "David Wheatley",
            "email": "hi@davwheat.dev",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Davwheat\\VirtualAuthors\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "davwheat Virtual Authors",
            "category": "features",
            "icon": {
                "name": "fas fa-ghost",
                "backgroundColor": "#51c5dd",
                "color": "#000"
            }
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^v6.0.1",
        "flarum/core": "@dev"
    }
}
